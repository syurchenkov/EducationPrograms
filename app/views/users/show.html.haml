%h1.text-center User page
.row
  .col-md-6.col-md-offset-3
    .jumbotron.info
      .title
        = @user.name
      .desc
        %span 
          Email:  
        = @user.email
      .desc
        Member of groups
      %table.table 
        %tr 
          %th
            Title
          %th
            Link
        - @groups.each do |group|
          %tr
            %td 
              = group.title
            %td
              = link_to 'SHOW', group

        
